{
  "project": "gandhi",
  "services": [
    {
      "id": "frontend",
      "apps": [
        {
          "id": "node",
          "domain": {
            "type": "HTTP",
            "uri": "gandhi.sloppy.zone"
          },
          "mem": 1024,
          "image": "mikemichel/lets-chat",
          "instances": 1,
          "port_mappings": [
            {
              "container_port": 5000
            }
          ],
          "env": {
            "LCB_DATABASE_URI": "mongodb://mongodb.backend.gandhi/gandhi"
          },
          "dependencies": [
            "../backend/mongodb"
          ]
        }
      ]
    },
    {
      "id": "backend",
      "apps": [
        {
          "id": "mongodb",
          "mem": 512,
          "image": "mongo",
          "instances": 1,
          "port_mappings": [
            {
              "container_port": 27017
            }
          ],
		  "volumes": [
            {
              "container_path": "/data/db",
              "size": "8GB"
            },
            {
              "container_path": "/data/configdb",
              "size": "8GB"
            }
          ]
          }
      ]
    }
  ]
}